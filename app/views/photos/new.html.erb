<div class="container">
<ol class="breadcrumb">
  <li><a href="<%= user_albums_path %>">Home</a></li>
  <li><a href="<%= user_album_path(@user.id,@album.id) %>"><%= @album.name %></a></li>
  <li class="active">Add Photo</li>
</ol>
<div class="jumbotron">
<h2><%= @album.name %></h2>
<p>ADD PHOTO</p>

</div>
<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">Add New Photo</div>
  <div class="panel-body">

<%= form_for :photo, :url => user_album_photos_path, :method => :post, :html => { :multipart => true } do |f| %>
	
	<%= f.text_field :title, placeholder: 'Title' %>
	<br><br>
	<p><b>Attach photo</b> 
	<%= f.file_field :image %><br>
	<%# fields_for :tags do |fa|%>
		<%= f.label :tags %> 
	<%= f.text_field :tags_attributes %><%#end%>
	<%= f.submit :submit, class: "btn btn-warning btn-sm", role: "button"%>
	</p>
	<%end%>
	</div>

</div>
</div>
<div class="container">
<div class="jumbotron" id="home">
<h1>Welcome <%=current_user.username %></h1>
  
  <p class="pull-right"> <b>Create a</b><br>
<%= link_to "New Album", new_user_album_path(@user), class: "btn btn-primary btn-lg pull-right", role: "button"%>
  </p>
</div>
   


<% @albums.each do |f| %>
<div class="col-sm-6 col-md-3">
<div class="thumbnail">
<% if f.photos.present? %>
<td><%= link_to image_tag(f.photos.first.image.url), user_album_path(@user.id,f.id), class: "thumbnail" %> </td>


<% else %>
<%#debugger%>
<td><img src="http://i.imgur.com/vGsqNpo.jpg"), class="thumbnail"></img> </td>
<% end %>



 <div class="caption">
<h3 ><a href="<%= user_album_path(@user.id,f.id) %>" class="btn btn-success btn-lg"><%= f.name %>    <span class="badge"><%= f.photos.count %></span></a><br></h3>


<div class="btn-group btn-group-justified" role="group">
<div class="btn-group" role="group">
<%= link_to "Edit", edit_user_album_path(@user.id,f.id), class: "btn btn-info btn-xs"%>
</div>

<div class="btn-group">
<%= link_to "Delete", user_album_path(@user.id,f.id), :method => :delete, class: "btn btn-info btn-xs" %>
</div>
</div>
</div>
</div>
</div>
<%end%>
</div>
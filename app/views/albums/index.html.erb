<div class="container" id="main-content">
					<div class="jumbotron" id="home">
					<h1>Welcome <%= image_tag current_user.avatar_url, class: "img-circle" %>
					<br><%=current_user.username %></h1>
					  
					  <p class="pull-right"> <b>Create a</b><br>
					<%= link_to "New Album", new_user_album_path(@user), remote: true, class: "btn btn-primary btn-lg pull-right", role: "button"%>
					<div id="album-modal" class="modal fade"></div>
					  </p>
					</div>
<% if @albums.present? %>

<div class="row index-line">

				<% @albums.each do |f| %>
<!-- <p class="well">name count is <%=f.name.length %></p> -->
						<div class="col-xs-6 col-md-3">
								<div class="thumbnail" id="photo_back">
											<% if f.photos.present? %>
											<td id="ex5"><%= link_to image_tag(f.photos.first.snaps_url(:medium)), user_album_path(@user.id,f.id), class: "thumbnail rotate" %> </td>
											<%else%>
												<td><%= link_to image_tag("http://i.imgur.com/vGsqNpo.jpg"), user_album_path(@user.id,f.id), class: "thumbnail rotate default" %>
												</td>
											<%end%>
											 <div class="caption">
											<h3 ><a href="<%= user_album_path(@user.id,f.id) %>" class="btn btn-success btn-lg btn-block"><%= f.name %>    <span class="badge"><%= f.photos.count %></span></a></h3>


														<div class="btn-group btn-group-justified" role="group">
														<div class="btn-group" role="group">
														<%= link_to edit_user_album_path(@user.id,f.id), remote: true, class: "btn btn-warning btn-xs" do %>
                                                                    <i class="glyphicon glyphicon-pencil"></i> Edit
                                                                    <%end%>
                                                                    </div>
																		<div class="btn-group">
																		<%= link_to user_album_path(@user.id,f.id), :method => :delete, class: "btn btn-danger btn-xs" do %>
                                                                    <i class="glyphicon glyphicon-trash"></i> Delete
                                                                    <%end%>
																		</div>

														</div>
											</div>
								</div>
						</div>
				<%end%>
				
				</div>
<%else%>
<center>
<div class="row no-pic-line">
<h1> NO ALBUMS </h1>

</div>
</center>
<%end%>
</div>

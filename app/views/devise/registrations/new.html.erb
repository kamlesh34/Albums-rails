<div class="container">
<% if resource.errors.present? %>
  <div class="alert alert-danger pull-right" id="alerts">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= devise_error_messages! %></div>
  <%end%>
<div class="col-md-4 pull-right">
<h2 id="txt">Sign up</h2>
<div class="well">
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-primary btn-block btn-lg" do%>
    <i class="fa fa-google-plus fa-2x"></i> Sign Up with Google
    <%end%>
    <br />
  <% end -%>
<% end -%>
<div ><b><center>------------OR------------</center></b></div>


<p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
<div class="input-group">
  <span class="input-group-addon"><i class="fa fa-user fa-lg"></i></span>
  <input id="user_username" name="user[username]" class="form-control" type="text" placeholder="User Name">
</div>
<br>
<div class="input-group">
  <span class="input-group-addon"><i class="fa fa-envelope fa-lg"></i></span>
  <input id="user_email" name="user[email]" class="form-control" type="email" placeholder="Email">
</div>
<br>
<div class="input-group">
  <span class="input-group-addon"><i class="fa fa-camera-retro fa-lg"></i></span>
  <input id="user_avatar" name="user[avatar]" class="form-control" type="file">
</div>
<br>
<div class="input-group">
  <span class="input-group-addon"><i class="fa fa-key fa-lg"></i></span>
  <input id="user_password" name="user[password]" class="form-control" type="password" placeholder="Password">
</div>
<br>
<div class="input-group">
  <span class="input-group-addon"><i class="fa fa-link fa-lg"></i></span>
  <input id="user_password_confirmation" name="user[password_confirmation]" class="form-control" type="password" placeholder="Confirm Password">
</div>




